{
  "highlight_slot_panel": {
    "type": "panel",
    "controls": [
      {
        "gr_hl": {
          "type": "image",
          "texture": "textures/ui/highlight_slot",
          "controls": [
            {
              "wb": {
                "type": "image",
                "texture": "textures/ui/focus_border_white",
                "size": ["100% + 2px", "100% + 2px"]
              }
            }
          ]
        }
      },
      {
        "better_cursor_tooltip@common.better_cursor_tooltip_wrapper": {}
      }
    ]
  },
  "better_tooltip": {
    "type": "panel",
    "size": ["100%cm", "100%cm"],
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 50,
    "bindings": [
      {
        "binding_name": "#hover_text",
        "binding_type": "collection",
        "binding_collection_name": "$item_collection_name"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not ((#hover_text-)=#hover_text))",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "background@common.item_background": {
          "layer": 1,
          "allow_clipping": false,
          "size": [ "100%sm + 10px", "100%sm + 10px" ]
        }
      },
      {
        "better_item_hover_text": {
          "type": "label",
          "text": "#hover_text",
          "allow_clipping": false,
          "bindings": [
            {
              "binding_name": "#hover_text",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name"
            }
          ],
          "layer": 2
        }
      }
    ]
  },
  "better_cursor_tooltip_wrapper": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      { "better_cursor_tooltip@common.better_cursor_tooltip": {} }
    ],
    "bindings": [
      {
        "binding_name": "#is_container_screen",
        "binding_name_override": "#visible"
      }
    ]
  },
  "better_cursor_tooltip": {
    "type": "custom",
    "renderer": "bundle_tooltip_renderer",
    "size": ["100%cm", "100%cm"],
    "layer": 20,
    "controls": [{ "tooltip@common.better_tooltip": {} }]
  },
  "item_background": {
    "type": "panel",
    "controls": [
      {
        "default": {
          "type": "image",
          "follows_cursor": true,
          "texture": "textures/ui/purpleBorder",
          "bindings": [
            {
              "binding_name": "#hover_text",
              "binding_type": "collection",
              "binding_collection_name": "$item_collection_name"
            },
            {
              "binding_type": "view",
              "source_property_name": "((#hover_text-'§e'-'§b'-'§d')=#hover_text)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "uncommon@templates.better_item_background": {
          "$bg_rarity": "uncommon",
          "$codec": "§e"
        }
      },
      {
        "rare@templates.better_item_background": {
          "$bg_rarity": "rare",
          "$codec": "§b"
        }
      },
      {
        "epic@templates.better_item_background": {
          "$bg_rarity": "epic",
          "$codec": "§d"
        }
      }
    ]
  },
  "selected_item_details_factory": {
    "ignored": true
  }
}
